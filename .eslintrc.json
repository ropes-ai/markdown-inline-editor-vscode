{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "@typescript-eslint/no-var-requires": "warn",
    "curly": "off",
    "eqeqeq": "warn",
    "no-throw-literal": "warn"
  },
  "ignorePatterns": [
    "out",
    "dist",
    "**/*.d.ts",
    "node_modules",
    "coverage",
    "test-report",
    "*.js",
    "examples/**"
  ]
}

