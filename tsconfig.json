{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "examples",
    "examples/**",
    "**/examples/**",
    "**/examples/**/*.js",
    "**/examples/**/*.ts",
    "node_modules"
  ]
}