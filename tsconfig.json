{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "examples",
    "examples/**",
    "**/examples/**",
    "node_modules",
    "node_modules/**",
    "**/node_modules/**",
    "dist",
    "dist/**",
    "**/dist/**",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}